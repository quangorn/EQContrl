<Window x:Class="AstroMountConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstroMountConfigurator"
        mc:Ignorable="d"
        Title="AstroMountConfigurator" Height="350" Width="525">
    <Border Padding="10">
        <StackPanel>
            <TextBlock Text="Status"/>
            <TextBox x:Name="StatusText" IsReadOnly="True" Background="#eee" Padding="2"/>

            <!-- Buttons -->
            <Grid Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="ConnectButton" Click="ConnectButton_Click" Content="Connect" Margin="0 0 10 0"/>
                <Button Grid.Column="1" x:Name="DisconnectButton" Click="DisconnectButton_Click" Content="Disconnect" IsEnabled="False"/>
                <Button Grid.Column="2" x:Name="WriteButton" Click="WriteButton_Click" Content="Write" IsEnabled="False" Margin="10 0 0 0"/>
            </Grid>

        </StackPanel>
    </Border>
</Window>
